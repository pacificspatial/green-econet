{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "composite": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "jsx": "react-jsx",
        "noEmit": true,
        "esModuleInterop": true,
        "strict": true, 
        "skipLibCheck": true, 
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
